<Window x:Class="RedundancyRemoverComparerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedundancyRemoverComparerWpf"
        xmlns:utils="clr-namespace:UlrikHovsgaardWpf.Utils;assembly=UlrikHovsgaardWpf"
        xmlns:viewModels="clr-namespace:RedundancyRemoverComparerWpf.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:ComparerViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="602.137" Width="1082.195" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="479*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <utils:ZoomBorder x:Name="border" BorderBrush="Black" ClipToBounds="True" BorderThickness="0" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,9.6,10.2">
            <Image x:Name="image" Stretch="Uniform" Source="{Binding PatternGraphImage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0.4,0.2"/>
        </utils:ZoomBorder>
        <utils:ZoomBorder x:Name="border2" BorderBrush="Black" ClipToBounds="True" BorderThickness="0" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,9.6,10.2">
            <Image x:Name="image2" Stretch="Uniform" Source="{Binding OtherGraphImage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0.4,0.2"/>
        </utils:ZoomBorder>
        <Grid Grid.Row="1" Grid.Column="0">

        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">

        </Grid>
        <Button x:Name="btnChangeRightmostGraphView" Content="Change view" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="443.4,479,0,0" VerticalAlignment="Top" Width="85" Click="btnChangeRightmostGraphView_Click"/>
        <Label x:Name="lblGraphCurrentlyShown" Content="{Binding GraphShownText, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Margin="183.4,476,0,0" VerticalAlignment="Top" Width="255"/>
        <ComboBox x:Name="cmbGraphToTest"
                  ItemsSource="{Binding Path=TestableGraphs}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Path=TestableGraphSelected, Mode=TwoWay}"
                  HorizontalAlignment="Left" Margin="10,10.2,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Width="196"/>
    </Grid>
</Window>
